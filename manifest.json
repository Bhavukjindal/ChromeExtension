{
  "name": "ReactForces",
  "version": "0.1.0",
  "description": "Show ratings of a codeforces problem",
  "permissions": ["http://localhost:3000/*","storage", "tabs"],
  "host_permissions": ["http://localhost:3000/*","https://*.codeforces.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.codeforces.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": ["https://*.codeforces.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "ReactForces",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
